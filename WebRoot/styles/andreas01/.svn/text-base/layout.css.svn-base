/* CONTENT */

div>div#content {
	margin-left: 0px;
}

body#error #content {
	margin-top: 20px;
}

/* MAIN */
div#main {
	border-left: 1px solid #f0f0f0;
	border-right: 1px solid #f0f0f0;
	padding: 0px 10px;
	width: 90%;
}

div#main h1 {
	font-size: 1.5em;
	margin: -4px 0 0.4em 0;
}

div#main h2 {
	font-size: 1.3em;
	margin: 0 0 10px 0;
}

div#main img {
	padding: 1px;
	display: inline;
	background: #cccccc;
	border: 4px solid #f0f0f0;
}

/* END MAIN */ 

